.container.quits-show-wrapper.text-center
  .jumbotron.mt-5.mx-auto.p-0
    %section.title.border-bottom.px-3
      %p.section-title やめたい習慣
      %p.content
        = @quit.title
    %section.rule1.border-bottom.px-3
      %p.section-title ルール①
      %p.content
        = @quit.rule1
    %section.rule2.border-bottom.px-3
      %p.section-title ルール②
      %p.content
        = @quit.rule2
    %section.date.px-3
      %p.section-title 作成日
      %p.content
        = @quit.created_at.strftime('%Y/%m/%d')

  = link_to "削除", habit_path(@quit), method: :delete, class: "btn btn-secondary d-inline-block", data: { confirm: "本当に削除しますか？" }
